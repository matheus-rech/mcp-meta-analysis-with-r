{
  "name": "mcp-meta-analysis-server",
  "version": "1.0.0",
  "description": "MCP server for guided meta-analysis workflows with containerized R environments",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "docker:build": "docker build -t mcp-meta-analysis-r .",
    "docker:run": "docker run -p 8080:8080 mcp-meta-analysis-r"
  },
  "keywords": [
    "mcp",
    "meta-analysis",
    "statistics",
    "r",
    "research",
    "evidence-synthesis"
  ],
  "author": "Matheus Rech",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "child_process": "^1.0.2",
    "csv-parser": "^3.0.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
